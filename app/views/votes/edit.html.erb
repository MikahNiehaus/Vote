
<%= form_for @vote do |f| %>
    <%= f.hidden_field :topic_id %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
    <%= label :opinion, "Agree", value: true %>
    <%= f.radio_button :opinion, true, :value => true%>
    <%= label :opinion, "Dissugree", value: false %>
    <%= f.radio_button :opinion, false, :value => false%>
    <%= f.submit "Update Vote"%>

<% end %> 